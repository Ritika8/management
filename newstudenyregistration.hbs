        <script>
        function valida() {
            var x = document.forms["myform"];

            var fname = x.elements["name"].value;
            var adreg = /^[a-zA-Z]+ [a-zA-Z]+$/;
            if (!(fname.match(adreg))) {
                alert("invalid name");

                return false;
            }
            var username = x.elements["user"].value;
            var usreg = /^[0-9]*$/;
            if (!(username.match(usreg))) {
                alert("invalid username");

                return false;
            }

            var pwd = x.elements["pwd"].value;
            var pwdreg = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{8,15}$/;
            if (!(pwd.match(pwdreg))) {
                alert(`Invalid password
password must contain 8 to 15 characters with at least one lowercase letter, one uppercase letter, one numeric digit, and one special character

`);


                return false;
            }

            var email = x.elements["email"].value;
            var emailreg = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
            if (!(email.match(emailreg))) {
                alert("invalid email");

                return false;
            }
             var phone= x.elements["number"].value;
            var phreg = /^[0-9]*$/;
            if (!(phone.match(phreg))) {
                alert("invalid contact number");

                return false;
            }
            var gender=x.elements["gender"].value;
            if(gender==""){
                alert("Plz fill gender");
                return false;
            }
          
            var passing= x.elements["pass"].value;
            var pareg = /^[0-9]*$/;
            if (!(passing.match(pareg))) {
                alert("invalid passing year");

                return false;
            }
        }
